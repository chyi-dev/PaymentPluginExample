<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:name=".PaymentApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PaymentPluginScanner"
        tools:targetApi="31">
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.PaymentPluginScanner">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver
            android:name=".receiver.StartPayReceiver"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="com.coffeeji.payment.plugin.PAY_ACTON" />
            </intent-filter>
        </receiver>

        <receiver
            android:name=".receiver.CancelPayReceiver"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="com.coffeeji.payment.plugin.PAY_CANCEL_ACTON" />
            </intent-filter>
        </receiver>

        <receiver
            android:name=".receiver.FeedbackPayReceiver"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="com.coffeeji.payment.plugin.MAKE_STATE_ACTION" />
            </intent-filter>
        </receiver>
    </application>

</manifest>